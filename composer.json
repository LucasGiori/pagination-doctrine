{
    "name": "lucasgiori/pagination-doctrine",
    "description": "Doctrine pagination",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DoctrinePagination\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoctrinePagination\\tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.7"
    },
    "require": {
        "php": "^8.0",
        "doctrine/orm": "^2.8"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "test-coverage-html": "phpunit --colors=always --coverage-html report"
    }
}
